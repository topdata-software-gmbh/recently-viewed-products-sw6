<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Field Serializer -->
        <service id="Topdata\TopdataRecentlyViewedProductsSW6\DAL\FieldSerializer\RecentProductFieldSerializer">
            <argument type="service" id="validator"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\DefinitionInstanceRegistry"/>

            <tag name="shopware.field_serializer"/>
        </service>

        <!-- Controllers -->
        <service id="Topdata\TopdataRecentlyViewedProductsSW6\Controller\RecentProductController" public="true">
            <argument type="service" id="cms_slot.repository"/>
            <argument type="service" id="Topdata\TopdataRecentlyViewedProductsSW6\Service\RecentlyViewedProductService"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <!-- Entity Definitions-->
        <service id="Topdata\TopdataRecentlyViewedProductsSW6\DAL\RecentlyViewedProductDefinition">
            <tag name="shopware.entity.definition" entity="recently_viewed_product"/>
        </service>

        <service id="Topdata\TopdataRecentlyViewedProductsSW6\Service\RecentlyViewedProductService" public="true">
            <argument type="service" id="recently_viewed_product.repository"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="sales_channel.product.repository"/>
        </service>

        <service id="Topdata\TopdataRecentlyViewedProductsSW6\Subscriber\Storefront\ProductPageLoaderSubscriber">
            <argument type="service" id="Topdata\TopdataRecentlyViewedProductsSW6\Service\RecentlyViewedProductService"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Topdata\TopdataRecentlyViewedProductsSW6\Subscriber\Storefront\CmsPageLoaderSubscriber">
            <argument type="service" id="Topdata\TopdataRecentlyViewedProductsSW6\Service\RecentlyViewedProductService"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Topdata\TopdataRecentlyViewedProductsSW6\Core\Content\Product\Cms\RecentlyViewedProductCmsElementResolver">
            <tag name="shopware.cms.data_resolver"/>
        </service>

        <service id="Topdata\TopdataRecentlyViewedProductsSW6\Core\System\SalesChannel\Context\SalesChannelContextPersisterDecorated"
                 decorates="Shopware\Core\System\SalesChannel\Context\SalesChannelContextPersister"
                 decoration-on-invalid="ignore">
            <argument type="service" id="Topdata\TopdataRecentlyViewedProductsSW6\Core\System\SalesChannel\Context\SalesChannelContextPersisterDecorated.inner"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\CartPersister"/>
            <argument type="string">%shopware.api.store.context_lifetime%</argument>
        </service>

    </services>
</container>
